{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
		"colorNames": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": { "type": "string" },
					"synonym": { "type": "string" },
					"variants": {
						"type": "array",
						"items": { "type": "string" }
					},
					"agreement": { "type": "boolean" },
					"feminine": { "type": "string" },
					"definition": { "type": "string" },
					"etymology": { "type": "string" },
					"note": { "type": "string" },
					"example": { "type": "string" },
					"colors": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"rgb": { "type": "string" },
								"fidelity": {
									"type": "string",
									"enum": [ "*", "**", "***" ]
								},
								"hue": { "type": [ "integer", "null" ] },
								"saturation": { "type": "integer" },
								"lightness": { "type": "integer" }
							},
							"required": [
								"rgb"
							]
						}
					},
					"field": {
						"type": [ "string", "null" ],
						"enum": [ null, "orange", "vert", "brun", "bleu", "gris", "noir", "blanc", "rouge", "jaune", "violet", "rose" ]
					},
					"domain": {
						"type": "string",
						"enum": [ "cheveux", "chevaux", "pigment", "héraldique", "minéraux", "peau", "médical", "bovins" ]
					},
					"style": {
						"type": "string",
						"enum": [ "vieilli", "péjoratif", "rare" ]
					}
				},
				"required": [
					"name",
					"agreement"
				]
			}
		},
		"qualifiers": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": { "type": "string" },
					"definition": { "type": "string" },
					"agreement": { "type": "boolean" },
					"feminine": { "type": "string" },
					"etymology": { "type": "string" },
					"note": { "type": "string" },
					"domain": {
						"$ref": "#/properties/colorNames/items/properties/domain"
					},
					"synonym": { "type": "string" },
					"field": {
						"$ref": "#/properties/colorNames/items/properties/field"
					},
					"example": { "type": "string" },
					"applied": {
						"type": "object",
						"properties": {
							"plain": { "type": "string" },
							"plainColor": { "type": "string" },
							"qualified": { "type": "string" },
							"qualifiedColor": { "type": "string" }
						}
					}
				},
				"required": [
					"name",
					"agreement"
				]
			}
		}
	},
	"required": [
		"colorNames",
		"qualifiers"
	]
}